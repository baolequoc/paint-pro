{
  "name": "paint-pro",
  "version": "1.0.3",
  "main": "dist-electron/main.js",
  "description": "A simple paint app built with Vue 3, TypeScript, and Electron",
  "repository": {
    "type": "git",
    "url": "https://github.com/baolequoc/paint-pro"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development vite",
    "electron:build": "vite build && electron-builder",
    "electron:build:linux": "vite build && electron-builder --linux",
    "electron:preview": "electron .",
    "format": "prettier --write ./src",
    "lint": "eslint ./src --ext .vue,.js,.ts",
    "lint-fix": "eslint --fix ./src --ext .vue,.js,.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/lodash": "^4.17.16",
    "@vueuse/core": "^13.0.0",
    "axios": "^0.21.1",
    "fabric": "^6.6.1",
    "konva": "^10.0.0",
    "lodash": "^4.17.21",
    "pinia": "^2.0.0-rc.9",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.0",
    "update-electron-app": "^3.1.1",
    "vue": "^3.2.6",
    "vue-konva": "^3.2.6",
    "vue-pick-colors": "^1.8.0",
    "vue-router": "^4.0.11"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "happy-dom": "^12.10.3",
    "prettier": "^2.2.1",
    "typescript": "^5.8.2",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^1.6.1",
    "vue-tsc": "^2.2.8"
  },
  "build": {
    "appId": "com.paint-pro.app",
    "productName": "Paint Pro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Graphics",
      "icon": "build/icon.png"
    },
    "dmg": {
      "sign": false
    },
    "asar": false,
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "afterSign": "scripts/notarize.js"
  }
}
